                                    <Border.RenderTransform>
                                        <TranslateTransform />
                                    </Border.RenderTransform>
                                    <Ellipse x:Name="E1"
                                             Width="{Binding TemplateSettings.EllipseDiameter,
                                                             RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                             Height="{Binding TemplateSettings.EllipseDiameter,
                                                              RelativeSource={RelativeSource Mode=TemplatedParent}}"
